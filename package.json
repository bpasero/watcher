      "git add"
    ]
  },
  "dependencies": {
    "detect-libc": "^1.0.3"
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.0.3",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2"
